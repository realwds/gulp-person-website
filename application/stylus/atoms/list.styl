list-height= baseline*1.25

ul, ol, li
  list-style: none
  list-style-type: none
  margin: 0
  padding: 0

//  BLOCKS
ul.blocks,
ol.blocks
  display: block
  > li
    display: block
    position: relative
    width: 100%
    line-height: list-height

//  LISTS
.template .list > li
  span
    display: inline-block
    vertical-align: top
    &:nth-child(1)
      width: baseline*6
    @media (max-width: 670px - 1)
      display: inline
      white-space: normal
      &:nth-child(1)
        width: auto
        &:after
          content: ' '
  span, svg
    hasTransition()
  &.archived span,
  &.progress span
    color: grey-low
  &.listItem,
  &.archived
    a, svg
      display: block
    svg
      makeAbsolute: ((list-height - 24px)*.5) (baseline*6 - baseline*1.25)
      fill: grey-low
    @media (max-width: 670px - 1)
      padding-{align}: baseline*1.5
      svg
        {align}: 0
  &.listItem span:nth-child(1)
    color: grey-low
  &.archived span:nth-child(2)
    text-decoration: line-through

.template .list.hover > li
  span
    color: grey-low
  a:hover
    span
      color: grey-high
    span:nth-child(2)
      text-decoration: none

//  LIST COLOR
listColor(colorName, color)
  .template.color-{colorName} .list > li.next span
    color: color
  .template.color-{colorName} .list.hover > li a:hover svg
    fill: color

//  LIST COLOR CALLS
listColor('green', green)
listColor('yellow', yellow)
listColor('red', red)
listColor('blue', blue)
