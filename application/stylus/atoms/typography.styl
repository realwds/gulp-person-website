headline-height= baseline*2.25
headline-color= contrast

small-height= baseline*.75
small-color= grey-low

//  HEADLINE
h1, .h1
  margin: 0
  margin-bottom: baseline
  font-family: family-headline
  font-size: font-headline
  font-weight: weight-bold
  line-height: headline-height
  color: headline-color

//  PARAGRAPH
p, .p
  margin: 0

//  SMALL
small, .small
  font-size: font-small
  line-height: small-height
  color: small-color
  &.alt
    font-size: font-small-alt
